//-
  options.items - массив элементов выпадающего списка
  options.items[0].name - название элемента
  options.items[0].value - value элемента
  options.name - form element name
  options.tabindex - input tabindex
  options.required - input required

mixin iqdropdown(options)
  if !options
    - options = {}

  .iqdropdown
    p.iqdropdown-selection
    .iqdropdown-menu
      .iqdropdown-menu-option(data-id='item1')
        div
          p.iqdropdown-item Item 1
          p.iqdropdown-description A short description
      .iqdropdown-menu-option(data-id='item2')
        div
          p.iqdropdown-item Item 2
          p.iqdropdown-description A short description
      .iqdropdown-menu-option(data-id='item3')
        div
          p.iqdropdown-item Item 3
          p.iqdropdown-description A short description

